<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCB21"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49sp"
        android:layout_marginTop="66dp"
        android:fontFamily="@font/notosansbold"
        android:text="해커톤뿡"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/person"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="-75dp"
        android:baseline="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person" />

    <ImageButton
        android:id="@+id/addimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="-30dp"
        android:background="#CFC7C7"
        android:src="@drawable/button" />

    <Button
        android:id="@+id/btn_mytest"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F7E171"
        android:fontFamily="@font/notosansregular"
        android:text="나의 유형 분석하기"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_alltest"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F7E171"
        android:fontFamily="@font/notosansregular"
        android:text="모든 유형 분석하기"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="418dp"
        android:layout_height="200dp"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-160dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#F6FE98"
            android:scaleType="centerCrop"
            android:src="@drawable/project" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#F6FE98"
            android:scaleType="centerCrop"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/buy" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#F6FE98"
            android:scaleType="centerCrop"
            android:src="@drawable/setting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:backgroundTint="#F6FE98"
            android:src="@drawable/logout" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:scaleType="centerCrop"
            android:backgroundTint="#F6FE98"
            android:src="@drawable/question" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:backgroundTint="#F6FE98"
            android:src="@drawable/center" />
    </LinearLayout>

    <ImageView
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/graph" />

</LinearLayout>